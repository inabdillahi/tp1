<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{path('home')}}">tp1</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02"
                aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{path('home')}}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('mesannonces')}}">Mes annonces</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('admin')}}">Admin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Profile</a>
                    </li>

                </ul>
                <div class="d-flex">
                    <a href="{{path('logout')}}" class="btn btn-sm btn-danger mx-2">Logout</a>
                    <a href="{{path('register')}}" class="btn btn-sm btn-primary mx-2">Register</a>
                    <a href="{{path('login')}}" class="btn btn-sm btn-success mx-2">Login</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        {% block body %}{% endblock %}

    </div>

</body>

</html>