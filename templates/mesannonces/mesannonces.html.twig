{% extends 'base.html.twig' %}

{% block title %}Liste des mes annonces{% endblock %}

{% block body %}
<h2 class="mt-3">Liste des mes annonces</h2>

<div class="d-flex justify-content-end">
    <a href="{{path('ajouter-annonces')}}" class="btn btn-sm btn-success">Ajouter une annonces </a>
</div>

<div class="mt-3 row">
    <div class="col-12 col-md-9">
        {% for message in app.flashes('success') %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        {% endfor %}

        {% for mesannonces in mesannonces %}
        <div class="card">
            <div class="card-header">Mes annonces</div>
            <div class="card-body">
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="{{asset('uploads/'~ mesannonces.image )}}" class="img-fluid rounded-start"
                                alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Card title</h5>
                                <p class="card-text">This is a wider card with supporting text below as a natural
                                    lead-in to additional content. This content is a little bit longer.</p>
                                <p class="card-text"><small class="text-muted">350 vus</small></p>
                                <div class="d-flex justify-content-between">
                                    <a href="" class="btn btn-sm btn-danger">Supprimer</a>
                                    <a href="" class="btn btn-sm btn-primary">Modifier</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>




    <div class="col-12 col-md-3">
        <div class="card">
            <div class="card-header">Liste des categorie</div>
            <div class="card-body">

            </div>
        </div>
    </div>
</div>
{% endblock %}